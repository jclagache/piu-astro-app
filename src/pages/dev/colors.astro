---
import Layout from '../../layouts/main.astro';

// Redirect to home if not in development mode
if (!import.meta.env.DEV) {
  return Astro.redirect('/');
}
---

<Layout title="PIU Color Scales - Development Only">
  <div class="container mx-auto py-12 px-4">
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-bold mb-4 text-primary">PIU Color Scales</h1>
      <p class="text-lg text-muted-foreground">
        Development page - Explore the PIU color palette and design system
      </p>
      <div class="mt-4 p-4 bg-warning-light border border-warning rounded-lg">
        <p class="text-sm text-warning">
          ⚠️ This page is available only in development mode
        </p>
      </div>
    </div>

    <!-- Primary Colors -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-primary">Primary Scale (Yellow)</h2>
      <div class="grid grid-cols-2 md:grid-cols-5 lg:grid-cols-11 gap-4">
        <div class="bg-primary-50 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-50"></div>
          <div class="text-xs font-mono">#ffffff</div>
          <div class="text-xs text-muted-foreground">primary-50</div>
        </div>
        <div class="bg-primary-100 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-100"></div>
          <div class="text-xs font-mono">#fffefa</div>
          <div class="text-xs text-muted-foreground">primary-100</div>
        </div>
        <div class="bg-primary-200 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-200"></div>
          <div class="text-xs font-mono">#fbf4cb</div>
          <div class="text-xs text-muted-foreground">primary-200</div>
        </div>
        <div class="bg-primary-300 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-300"></div>
          <div class="text-xs font-mono">#f7e99c</div>
          <div class="text-xs text-muted-foreground">primary-300</div>
        </div>
        <div class="bg-primary-400 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-400"></div>
          <div class="text-xs font-mono">#f4df6c</div>
          <div class="text-xs text-muted-foreground">primary-400</div>
        </div>
        <div class="bg-primary-500 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-500"></div>
          <div class="text-xs font-mono">#f0d53d</div>
          <div class="text-xs text-muted-foreground">primary-500</div>
        </div>
        <div class="bg-primary-600 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-600"></div>
          <div class="text-xs font-mono">#e8c812</div>
          <div class="text-xs text-muted-foreground">primary-600</div>
        </div>
        <div class="bg-primary-700 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-700"></div>
          <div class="text-xs font-mono">#b99f0e</div>
          <div class="text-xs text-muted-foreground">primary-700</div>
        </div>
        <div class="bg-primary-800 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-800"></div>
          <div class="text-xs font-mono">#89760b</div>
          <div class="text-xs text-muted-foreground">primary-800</div>
        </div>
        <div class="bg-primary-900 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-900"></div>
          <div class="text-xs font-mono">#5a4e07</div>
          <div class="text-xs text-muted-foreground">primary-900</div>
        </div>
        <div class="bg-primary-950 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-primary-950"></div>
          <div class="text-xs font-mono">#423905</div>
          <div class="text-xs text-muted-foreground">primary-950</div>
        </div>
      </div>
    </section>

    <!-- Secondary Colors -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-secondary">Secondary Scale (Blue)</h2>
      <div class="grid grid-cols-2 md:grid-cols-5 lg:grid-cols-11 gap-4">
        <div class="bg-secondary-50 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-50"></div>
          <div class="text-xs font-mono">#74ccf2</div>
          <div class="text-xs text-muted-foreground">secondary-50</div>
        </div>
        <div class="bg-secondary-100 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-100"></div>
          <div class="text-xs font-mono">#5cc3f0</div>
          <div class="text-xs text-muted-foreground">secondary-100</div>
        </div>
        <div class="bg-secondary-200 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-200"></div>
          <div class="text-xs font-mono">#2eb2eb</div>
          <div class="text-xs text-muted-foreground">secondary-200</div>
        </div>
        <div class="bg-secondary-300 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-300"></div>
          <div class="text-xs font-mono">#1499d2</div>
          <div class="text-xs text-muted-foreground">secondary-300</div>
        </div>
        <div class="bg-secondary-400 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-400"></div>
          <div class="text-xs font-mono">#0f77a4</div>
          <div class="text-xs text-muted-foreground">secondary-400</div>
        </div>
        <div class="bg-secondary-500 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-500"></div>
          <div class="text-xs font-mono">#0b5575</div>
          <div class="text-xs text-muted-foreground">secondary-500</div>
        </div>
        <div class="bg-secondary-600 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-600"></div>
          <div class="text-xs font-mono">#073346</div>
          <div class="text-xs text-muted-foreground">secondary-600</div>
        </div>
        <div class="bg-secondary-700 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-700"></div>
          <div class="text-xs font-mono">#021118</div>
          <div class="text-xs text-muted-foreground">secondary-700</div>
        </div>
        <div class="bg-secondary-800 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-800"></div>
          <div class="text-xs font-mono">#000000</div>
          <div class="text-xs text-muted-foreground">secondary-800</div>
        </div>
        <div class="bg-secondary-900 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-900"></div>
          <div class="text-xs font-mono">#000000</div>
          <div class="text-xs text-muted-foreground">secondary-900</div>
        </div>
        <div class="bg-secondary-950 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-secondary-950"></div>
          <div class="text-xs font-mono">#000000</div>
          <div class="text-xs text-muted-foreground">secondary-950</div>
        </div>
      </div>
    </section>

    <!-- Accent Colors -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-accent">Accent Scale (Pink)</h2>
      <div class="grid grid-cols-2 md:grid-cols-5 lg:grid-cols-11 gap-4">
        <div class="bg-accent-50 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-50"></div>
          <div class="text-xs font-mono">#fee1eb</div>
          <div class="text-xs text-muted-foreground">accent-50</div>
        </div>
        <div class="bg-accent-100 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-100"></div>
          <div class="text-xs font-mono">#fec8db</div>
          <div class="text-xs text-muted-foreground">accent-100</div>
        </div>
        <div class="bg-accent-200 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-200"></div>
          <div class="text-xs font-mono">#fc97ba</div>
          <div class="text-xs text-muted-foreground">accent-200</div>
        </div>
        <div class="bg-accent-300 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-300"></div>
          <div class="text-xs font-mono">#fb6599</div>
          <div class="text-xs text-muted-foreground">accent-300</div>
        </div>
        <div class="bg-accent-400 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-400"></div>
          <div class="text-xs font-mono">#fa3378</div>
          <div class="text-xs text-muted-foreground">accent-400</div>
        </div>
        <div class="bg-accent-500 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-500"></div>
          <div class="text-xs font-mono">#f40658</div>
          <div class="text-xs text-muted-foreground">accent-500</div>
        </div>
        <div class="bg-accent-600 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-600"></div>
          <div class="text-xs font-mono">#c20546</div>
          <div class="text-xs text-muted-foreground">accent-600</div>
        </div>
        <div class="bg-accent-700 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-700"></div>
          <div class="text-xs font-mono">#900434</div>
          <div class="text-xs text-muted-foreground">accent-700</div>
        </div>
        <div class="bg-accent-800 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-800"></div>
          <div class="text-xs font-mono">#5f0222</div>
          <div class="text-xs text-muted-foreground">accent-800</div>
        </div>
        <div class="bg-accent-900 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-900"></div>
          <div class="text-xs font-mono">#2d0110</div>
          <div class="text-xs text-muted-foreground">accent-900</div>
        </div>
        <div class="bg-accent-950 p-4 rounded-lg text-center">
          <div class="h-12 mb-2 rounded bg-accent-950"></div>
          <div class="text-xs font-mono">#140007</div>
          <div class="text-xs text-muted-foreground">accent-950</div>
        </div>
      </div>
    </section>

    <!-- Shadcn HSL Variables -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-foreground">Shadcn HSL Variables</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Light Theme -->
        <div class="p-6 rounded-lg border border-border bg-card">
          <h3 class="font-semibold mb-4 text-card-foreground">Light Theme</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--primary</span>
              <div class="w-8 h-8 rounded bg-primary"></div>
              <span class="text-xs text-muted-foreground">51 86% 59%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--secondary</span>
              <div class="w-8 h-8 rounded bg-secondary"></div>
              <span class="text-xs text-muted-foreground">198 83% 25%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--accent</span>
              <div class="w-8 h-8 rounded bg-accent"></div>
              <span class="text-xs text-muted-foreground">339 95% 49%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--background</span>
              <div class="w-8 h-8 rounded bg-background border border-border"></div>
              <span class="text-xs text-muted-foreground">0 0% 100%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--foreground</span>
              <div class="w-8 h-8 rounded bg-foreground"></div>
              <span class="text-xs text-muted-foreground">0 0% 3.9%</span>
            </div>
          </div>
        </div>

        <!-- Dark Theme -->
        <div class="p-6 rounded-lg border border-border bg-card">
          <h3 class="font-semibold mb-4 text-card-foreground">Dark Theme</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--primary</span>
              <div class="w-8 h-8 rounded bg-primary"></div>
              <span class="text-xs text-muted-foreground">51 86% 59%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--secondary</span>
              <div class="w-8 h-8 rounded bg-secondary"></div>
              <span class="text-xs text-muted-foreground">198 83% 25%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--accent</span>
              <div class="w-8 h-8 rounded bg-accent"></div>
              <span class="text-xs text-muted-foreground">339 95% 49%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--background</span>
              <div class="w-8 h-8 rounded bg-background border border-border"></div>
              <span class="text-xs text-muted-foreground">0 0% 3.9%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--foreground</span>
              <div class="w-8 h-8 rounded bg-foreground"></div>
              <span class="text-xs text-muted-foreground">0 0% 98%</span>
            </div>
          </div>
        </div>

        <!-- System Colors -->
        <div class="p-6 rounded-lg border border-border bg-card">
          <h3 class="font-semibold mb-4 text-card-foreground">System Colors</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--muted</span>
              <div class="w-8 h-8 rounded bg-muted"></div>
              <span class="text-xs text-muted-foreground">0 0% 96.1%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--muted-foreground</span>
              <div class="w-8 h-8 rounded bg-muted-foreground"></div>
              <span class="text-xs text-muted-foreground">0 0% 45.1%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--destructive</span>
              <div class="w-8 h-8 rounded bg-destructive"></div>
              <span class="text-xs text-muted-foreground">0 84.2% 60.2%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--border</span>
              <div class="w-8 h-8 rounded bg-border border border-border"></div>
              <span class="text-xs text-muted-foreground">0 0% 89.8%</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-mono">--ring</span>
              <div class="w-8 h-8 rounded ring-2 ring-ring"></div>
              <span class="text-xs text-muted-foreground">51 86% 59%</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Semantic Colors -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-secondary">Semantic Colors Usage</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="p-6 rounded-lg bg-primary text-primary-foreground">
          <h3 class="font-semibold mb-2">Primary</h3>
          <p class="text-sm opacity-90">Used for main actions and branding</p>
          <div class="mt-4">
            <div class="text-xs font-mono opacity-75">bg-primary text-primary-foreground</div>
          </div>
        </div>
        <div class="p-6 rounded-lg bg-secondary text-secondary-foreground">
          <h3 class="font-semibold mb-2">Secondary</h3>
          <p class="text-sm opacity-90">Used for secondary actions</p>
          <div class="mt-4">
            <div class="text-xs font-mono opacity-75">bg-secondary text-secondary-foreground</div>
          </div>
        </div>
        <div class="p-6 rounded-lg bg-accent text-accent-foreground">
          <h3 class="font-semibold mb-2">Accent</h3>
          <p class="text-sm opacity-90">Used for highlights and accents</p>
          <div class="mt-4">
            <div class="text-xs font-mono opacity-75">bg-accent text-accent-foreground</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Card Examples -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-foreground">Card Examples</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="p-6 rounded-lg border border-border bg-card text-card-foreground">
          <h3 class="font-semibold mb-2">Card Background</h3>
          <p class="text-sm text-muted-foreground">Standard card styling</p>
          <div class="mt-4">
            <div class="text-xs font-mono text-muted-foreground">bg-card text-card-foreground</div>
          </div>
        </div>
        <div class="p-6 rounded-lg border border-border bg-background text-foreground">
          <h3 class="font-semibold mb-2">Page Background</h3>
          <p class="text-sm text-muted-foreground">Main page background</p>
          <div class="mt-4">
            <div class="text-xs font-mono text-muted-foreground">bg-background text-foreground</div>
          </div>
        </div>
        <div class="p-6 rounded-lg border border-border bg-muted text-muted-foreground">
          <h3 class="font-semibold mb-2">Muted Background</h3>
          <p class="text-sm opacity-90">Subtle background for less important content</p>
          <div class="mt-4">
            <div class="text-xs font-mono opacity-75">bg-muted text-muted-foreground</div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>