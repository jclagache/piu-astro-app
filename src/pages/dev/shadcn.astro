---
import Layout from '../../layouts/main.astro';
import { Button } from '../../components/ui/button';
import { Badge } from '../../components/ui/badge';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../../components/ui/card';
import { Skeleton } from '../../components/ui/skeleton';
---

<Layout title="Shadcn Components - PIU Theme">
  <main class="container mx-auto py-12 px-4">
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-bold mb-4 text-primary">Shadcn Components with PIU Theme</h1>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Testing all Shadcn UI components with the complete PIU color palette
      </p>
      <!-- Test des variables CSS -->
      <div class="mt-4 flex gap-4 justify-center">
        <div class="bg-primary text-primary-foreground px-4 py-2 rounded">Primary Test</div>
        <div class="bg-secondary text-secondary-foreground px-4 py-2 rounded">Secondary Test</div>
        <div class="bg-accent text-accent-foreground px-4 py-2 rounded">Accent Test</div>
      </div>
    </div>

    <div class="space-y-8">
      <!-- PIU Color Scale Demo -->
      <Card>
        <CardHeader>
          <CardTitle className="text-primary">PIU Color Scales Test</CardTitle>
          <CardDescription>
            Testing all the PIU color scales with Shadcn components
          </CardDescription>
        </CardHeader>
        <CardContent className="space-y-6">
          <!-- Primary Scale -->
          <div>
            <h3 class="text-lg font-semibold mb-3 text-foreground">Primary Scale (Yellow)</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="outline" className="bg-primary-100 text-primary-900 hover:bg-primary-200">100</Badge>
              <Badge variant="outline" className="bg-primary-300 text-primary-900 hover:bg-primary-400">300</Badge>
              <Badge variant="outline" className="bg-primary-500 text-primary-50 hover:bg-primary-600">500</Badge>
              <Badge variant="outline" className="bg-primary-700 text-primary-50 hover:bg-primary-800">700</Badge>
              <Badge variant="outline" className="bg-primary-900 text-primary-50 hover:bg-primary-950">900</Badge>
            </div>
          </div>

          <!-- Secondary Scale -->
          <div>
            <h3 class="text-lg font-semibold mb-3 text-foreground">Secondary Scale (Blue)</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="outline" className="bg-secondary-100 text-secondary-900 hover:bg-secondary-200">100</Badge>
              <Badge variant="outline" className="bg-secondary-300 text-secondary-50 hover:bg-secondary-400">300</Badge>
              <Badge variant="outline" className="bg-secondary-500 text-secondary-50 hover:bg-secondary-600">500</Badge>
              <Badge variant="outline" className="bg-secondary-700 text-secondary-50 hover:bg-secondary-800">700</Badge>
              <Badge variant="outline" className="bg-secondary-900 text-secondary-50 hover:bg-secondary-950">900</Badge>
            </div>
          </div>

          <!-- Accent Scale -->
          <div>
            <h3 class="text-lg font-semibold mb-3 text-foreground">Accent Scale (Pink)</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="outline" className="bg-accent-100 text-accent-900 hover:bg-accent-200">100</Badge>
              <Badge variant="outline" className="bg-accent-300 text-accent-900 hover:bg-accent-400">300</Badge>
              <Badge variant="outline" className="bg-accent-500 text-accent-50 hover:bg-accent-600">500</Badge>
              <Badge variant="outline" className="bg-accent-700 text-accent-50 hover:bg-accent-800">700</Badge>
              <Badge variant="outline" className="bg-accent-900 text-accent-50 hover:bg-accent-950">900</Badge>
            </div>
          </div>
        </CardContent>
      </Card>

      <!-- Buttons with PIU Theme -->
      <Card>
        <CardHeader>
          <CardTitle className="text-secondary">Button Variants</CardTitle>
          <CardDescription>
            All button variants using PIU colors
          </CardDescription>
        </CardHeader>
        <CardContent>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <div class="space-y-2">
              <p class="text-sm text-muted-foreground">Default (Primary)</p>
              <Button className="w-full bg-primary text-primary-foreground">Primary Button</Button>
            </div>
            <div class="space-y-2">
              <p class="text-sm text-muted-foreground">Secondary</p>
              <Button variant="secondary" className="w-full bg-secondary text-secondary-foreground">Secondary</Button>
            </div>
            <div class="space-y-2">
              <p class="text-sm text-muted-foreground">Outline</p>
              <Button variant="outline" className="w-full">Outline</Button>
            </div>
            <div class="space-y-2">
              <p class="text-sm text-muted-foreground">Ghost</p>
              <Button variant="ghost" className="w-full">Ghost</Button>
            </div>
            <div class="space-y-2">
              <p class="text-sm text-muted-foreground">Destructive</p>
              <Button variant="destructive" className="w-full">Destructive</Button>
            </div>
            <div class="space-y-2">
              <p class="text-sm text-muted-foreground">Link</p>
              <Button variant="link" className="w-full">Link</Button>
            </div>
          </div>
        </CardContent>
      </Card>

      <!-- Custom PIU Colored Buttons -->
      <Card>
        <CardHeader>
          <CardTitle className="text-accent">Custom PIU Buttons</CardTitle>
          <CardDescription>
            Buttons using specific PIU color scales
          </CardDescription>
        </CardHeader>
        <CardContent>
          <div class="flex flex-wrap gap-4">
            <Button className="bg-primary-500 hover:bg-primary-600 text-primary-950">
              PIU Yellow
            </Button>
            <Button className="bg-secondary-500 hover:bg-secondary-600 text-secondary-50">
              PIU Blue
            </Button>
            <Button className="bg-accent-500 hover:bg-accent-600 text-accent-50">
              PIU Pink
            </Button>
            <Button className="bg-primary-300 hover:bg-primary-400 text-primary-900">
              Light Yellow
            </Button>
            <Button className="bg-secondary-200 hover:bg-secondary-300 text-secondary-900">
              Light Blue
            </Button>
            <Button className="bg-accent-200 hover:bg-accent-300 text-accent-900">
              Light Pink
            </Button>
          </div>
        </CardContent>
      </Card>

      <!-- Skeleton Loading Demo -->
      <Card>
        <CardHeader>
          <CardTitle>Loading Skeletons</CardTitle>
          <CardDescription>
            Skeleton components with PIU theme
          </CardDescription>
        </CardHeader>
        <CardContent>
          <div class="space-y-4">
            <div class="flex items-center space-x-4">
              <Skeleton className="h-12 w-12 rounded-full" />
              <div class="space-y-2">
                <Skeleton className="h-4 w-[250px]" />
                <Skeleton className="h-4 w-[200px]" />
              </div>
            </div>
            <div class="space-y-2">
              <Skeleton className="h-4 w-full" />
              <Skeleton className="h-4 w-full" />
              <Skeleton className="h-4 w-3/4" />
            </div>
          </div>
        </CardContent>
      </Card>

      <!-- Card Variants -->
      <div class="grid md:grid-cols-2 gap-6">
        <Card className="border-primary-300">
          <CardHeader className="bg-primary-50 rounded-t-lg">
            <CardTitle className="text-primary-700">Primary Card</CardTitle>
            <CardDescription className="text-primary-600">
              Card with primary color theme
            </CardDescription>
          </CardHeader>
          <CardContent className="pt-6">
            <p class="text-foreground mb-4">
              This card uses primary colors from the PIU palette.
            </p>
            <Button className="bg-primary-500 hover:bg-primary-600 h-9 px-3">
              Primary Action
            </Button>
          </CardContent>
        </Card>

        <Card className="border-secondary-300">
          <CardHeader className="bg-secondary-50 rounded-t-lg">
            <CardTitle className="text-secondary-700">Secondary Card</CardTitle>
            <CardDescription className="text-secondary-600">
              Card with secondary color theme
            </CardDescription>
          </CardHeader>
          <CardContent className="pt-6">
            <p class="text-foreground mb-4">
              This card uses secondary colors from the PIU palette.
            </p>
            <Button className="bg-secondary-500 hover:bg-secondary-600 text-secondary-50 h-9 px-3">
              Secondary Action
            </Button>
          </CardContent>
        </Card>
      </div>
    </div>
  </main>
</Layout>
