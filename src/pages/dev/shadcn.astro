---
import Layout from '../../layouts/main.astro';
import { Button } from '../../components/ui/button';
import { Badge } from '../../components/ui/badge';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../../components/ui/card';
import { Skeleton } from '../../components/ui/skeleton';

// Redirect to home if not in development mode
if (!import.meta.env.DEV) {
  return Astro.redirect('/');
}
---

<Layout title="Shadcn Components - PIU Theme">
  <main class="container mx-auto py-12 px-4">
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-bold mb-4 text-primary">Shadcn Components</h1>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Testing Shadcn UI components with the custom PIU theme
      </p>
      <div class="mt-4 p-4 bg-warning-light border border-warning rounded-lg">
        <p class="text-sm text-warning">
          ⚠️ This page is available only in development mode
        </p>
      </div>
    </div>

    <!-- Button Variants -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-secondary">Button Variants</h2>
      <div class="flex flex-wrap gap-4">
        <Button>Default</Button>
        <Button variant="secondary">Secondary</Button>
        <Button variant="destructive">Destructive</Button>
        <Button variant="outline">Outline</Button>
        <Button variant="ghost">Ghost</Button>
        <Button variant="link">Link</Button>
      </div>
    </section>

    <!-- Button Sizes -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-accent">Button Sizes</h2>
      <div class="flex flex-wrap items-center gap-4">
        <Button size="sm">Small</Button>
        <Button size="default">Default</Button>
        <Button size="lg">Large</Button>
      </div>
    </section>

    <!-- Badge Variants -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-primary">Badge Variants</h2>
      <div class="flex flex-wrap gap-4">
        <Badge>Default</Badge>
        <Badge variant="secondary">Secondary</Badge>
        <Badge variant="destructive">Destructive</Badge>
        <Badge variant="outline">Outline</Badge>
      </div>
    </section>

    <!-- Card Components -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-secondary">Card Components</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <Card>
          <CardHeader>
            <CardTitle>Card Title</CardTitle>
            <CardDescription>Card description goes here</CardDescription>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              This is the card content area where you can place any content.
            </p>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="text-primary">Primary Card</CardTitle>
            <CardDescription>Card with primary styling</CardDescription>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              This card demonstrates the primary color theme.
            </p>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="text-accent">Accent Card</CardTitle>
            <CardDescription>Card with accent styling</CardDescription>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              This card demonstrates the accent color theme.
            </p>
          </CardContent>
        </Card>
      </div>
    </section>

    <!-- Skeleton Components -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-accent">Skeleton Components</h2>
      <div class="space-y-4">
        <div class="space-y-2">
          <Skeleton className="h-4 w-[250px]" />
          <Skeleton className="h-4 w-[200px]" />
          <Skeleton className="h-4 w-[150px]" />
        </div>
        <div class="flex items-center space-x-4">
          <Skeleton className="h-12 w-12 rounded-full" />
          <div class="space-y-2">
            <Skeleton className="h-4 w-[200px]" />
            <Skeleton className="h-4 w-[100px]" />
          </div>
        </div>
      </div>
    </section>

    <!-- Interactive Elements -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-primary">Interactive Elements</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <Card>
          <CardHeader>
            <CardTitle>Form Elements</CardTitle>
            <CardDescription>Testing form components</CardDescription>
          </CardHeader>
          <CardContent className="space-y-4">
            <div>
              <label class="text-sm font-medium">Input Field</label>
              <input 
                type="text" 
                placeholder="Enter text..." 
                class="w-full mt-1 px-3 py-2 border border-border rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-ring"
              />
            </div>
            <div>
              <label class="text-sm font-medium">Textarea</label>
              <textarea 
                placeholder="Enter message..." 
                rows="3"
                class="w-full mt-1 px-3 py-2 border border-border rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-ring"
              ></textarea>
            </div>
            <Button className="w-full">Submit</Button>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle>Status Indicators</CardTitle>
            <CardDescription>Various status badges</CardDescription>
          </CardHeader>
          <CardContent className="space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm">Connection Status</span>
              <Badge className="bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                Connected
              </Badge>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm">Sync Status</span>
              <Badge className="bg-warning-light text-warning">
                Syncing
              </Badge>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm">Error Status</span>
              <Badge variant="destructive">Error</Badge>
            </div>
          </CardContent>
        </Card>
      </div>
    </section>

    <!-- Color Theme Testing -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6 text-secondary">Color Theme Testing</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="p-6 rounded-lg bg-primary text-primary-foreground">
          <h3 class="font-semibold mb-2">Primary Theme</h3>
          <p class="text-sm opacity-90">
            Testing primary color with text contrast
          </p>
        </div>
        <div class="p-6 rounded-lg bg-secondary text-secondary-foreground">
          <h3 class="font-semibold mb-2">Secondary Theme</h3>
          <p class="text-sm opacity-90">
            Testing secondary color with text contrast
          </p>
        </div>
        <div class="p-6 rounded-lg bg-accent text-accent-foreground">
          <h3 class="font-semibold mb-2">Accent Theme</h3>
          <p class="text-sm opacity-90">
            Testing accent color with text contrast
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>